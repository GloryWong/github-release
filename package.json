{
  "name": "github-release",
  "type": "module",
  "version": "0.7.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "pnpm simple-git-hooks",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "commit": "git-cz"
  },
  "dependencies": {
    "@nuxt/ui": "^2.17.0",
    "expiry-map": "^2.0.0",
    "localforage": "^1.10.0",
    "micromark": "^4.0.0",
    "micromark-extension-gfm": "^3.0.0",
    "nuxt": "^3.12.3",
    "octokit": "^4.0.2",
    "p-memoize": "^7.1.1",
    "tailwindcss-scoped-preflight": "^3.3.0",
    "vue": "^3.4.31",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.22.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@morev/vue-transitions": "^3.0.2",
    "@pinia/nuxt": "^0.5.1",
    "@vueuse/nuxt": "^10.11.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-perfectionist": "^2.11.0",
    "lint-staged": "^15.2.7",
    "nuxt-security": "^1.4.3",
    "simple-git-hooks": "^2.11.1",
    "type-fest": "^4.21.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --edit ${1}",
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
